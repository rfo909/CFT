
type FileLine(file,line,lineNumber)


def Search (file, pattern) {
	file.openForText
	lineNumber=0
	matches=List
	loop {
		if (file.atEOF) break
		lineNumber=lineNumber+1
		line=file.readLine
		if (line.contains(pattern)) {
			matches.add(FileLine(file,lineNumber, line))
		}
	}
	return matches
}	
			
